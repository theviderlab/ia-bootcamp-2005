# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=agent_lab

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Defaults
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_MAX_TOKENS=1000

# RAG Configuration (Pinecone)
ENABLE_RAG=true
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=agent-lab-index
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Optional Pinecone Configuration
# PINECONE_DIMENSION=1536
# PINECONE_METRIC=cosine
# PINECONE_NAMESPACE=default

# Memory Configuration
ENABLE_LONG_TERM=true
MEMORY_TYPE=buffer
SEMANTIC_STORAGE=hybrid

# Granular Memory Type Controls
ENABLE_SEMANTIC_MEMORY=true
ENABLE_EPISODIC_MEMORY=true
ENABLE_PROFILE_MEMORY=true
ENABLE_PROCEDURAL_MEMORY=true

# Optional Memory Configuration
# SHORT_TERM_WINDOW_SIZE=10
# MAX_TOKEN_LIMIT=2000
# RETENTION_DAYS=30
# ENABLE_ANONYMIZATION=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# MCP Configuration
MCP_DEFAULT_HOST=localhost
MCP_BASE_PORT=9000
